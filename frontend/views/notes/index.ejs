<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Your Notes</h1>
    <% if (user) { %>
      <div>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    <% } %>
  </div>

  <a href="/notes/new" class="btn btn-primary mb-3">Create New Note</a>

  <ul class="list-group">
    <% notes.forEach(note => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <strong>
          <a href="/notes/<%= note._id %>"><%= note.title %></a>
        </strong>
        <div class="d-flex align-items-center">
          <div class="small text-muted mx-2"><%= note.formattedDate %></div>
          <a href="/notes/<%= note._id %>/edit" class="btn btn-sm btn-warning mx-2">Edit</a>
          <form action="/notes/<%= note._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn btn-sm btn-danger mx-2">Delete</button>
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
</div>
