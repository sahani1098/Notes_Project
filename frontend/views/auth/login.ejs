<div class="container mt-5">
  <% if (user) { %>
    <h2>Welcome, <%= user.firstName %>!</h2>
    <a href="/auth/logout" class="btn btn-danger mt-3">Logout</a>
    <a href="/notes" class="btn btn-primary mt-3">Go to Notes</a>
  <% } else { %>
    <h2 class="mb-4">Login</h2>
    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error[0] %></div>
    <% } %>
    <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success[0] %></div>
    <% } %>
    <form action="/auth/login" method="POST">
      <div class="mb-3">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required />
      </div>
      <div class="mb-3">
        <label>Password</label>
        <input type="password" name="password" class="form-control" required />
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <p class="mt-3">Don't have an account? <a href="/auth/register">Register</a></p>
  <% } %>
</div>
